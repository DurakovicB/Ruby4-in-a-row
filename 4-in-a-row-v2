class Board
  @@board = []
  @@rows = 6
  @@columns = 7

  def initialize(*args)
    if args[0].is_a? Numeric
      # perform initialization in first case
      @@rows = args[0]
      @@columns = args[1]
    elsif args[0].is_a? String
    # perform initialization in second case
      
    else
      raise TypeError
    end
  end
  #printing the Board


  def print_board(board)
    i=0
    while i<board[1].length do
         j=0
         while j<board.length do
           print(" [")
           if (board[j][i]==0)
             print("-")
           elsif board[j][i]==1
             print("X")
           elsif board[j][i]=2
              print("O")
            end

            print("] ")
           j+=1
         end

         puts ""
         i+=1
       end
end
